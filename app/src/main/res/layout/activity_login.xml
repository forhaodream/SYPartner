<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/activity_login_logo"
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300px"
        android:src="@mipmap/logo"/>

    <EditText
        android:id="@+id/activity_login_user_ed"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@id/activity_login_logo"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_marginTop="100px"
        android:background="@android:color/white"
        android:drawableLeft="@mipmap/ic_launcher"
        android:drawablePadding="20px"
        android:hint="请输入手机号"
        android:textSize="13sp"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/activity_login_user_ed"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_marginTop="30px"
        android:background="@color/home_text_hui"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/activity_login_linear"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@id/view1"
        android:layout_marginTop="30px"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/activity_login_psd_ed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@id/activity_login_user_ed"
            android:layout_marginLeft="150px"
            android:layout_weight="5"
            android:background="@android:color/white"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawablePadding="20px"
            android:hint="请输入验证码"
            android:textSize="13sp"/>

        <!--<View-->
        <!--android:layout_width="2px"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="20px"-->
        <!--android:layout_marginTop="20px"-->
        <!--android:background="@color/home_text_hui"/>-->


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/activity_login_linear"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_marginTop="30px"
        android:background="@color/home_text_hui"/>

    <Button
        android:id="@+id/activity_login_btn"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_below="@id/view2"
        android:layout_marginLeft="150px"
        android:layout_marginRight="150px"
        android:layout_marginTop="80px"
        android:background="@drawable/drawable_button_blue"
        android:text="登 录"
        android:textColor="@android:color/white"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_login_btn"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_marginTop="50px">

        <TextView
            android:id="@+id/立即注册tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即注册"
            android:textColor="@color/text_grays"/>

        <TextView
            android:id="@+id/忘记密码tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码?"
            android:textColor="@color/text_grays"/>
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/activity_logo_out_login_linear"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_logo_qq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qq_logo"
            android:gravity="center_horizontal"
            android:text="QQ登录"
            android:textColor="@android:color/black"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/activity_logo_wx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@mipmap/wx_logo"
            android:gravity="center_horizontal"
            android:text="微信登录"
            android:textColor="@android:color/black"
            android:textSize="13sp"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_above="@id/activity_logo_out_login_linear"
        android:layout_marginBottom="60px"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:layout_marginTop="30px">

        <View
            android:layout_width="260px"
            android:layout_height="2px"
            android:layout_centerVertical="true"
            android:background="@color/text_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="其他登录方式"
            android:textColor="@color/text_gray"
            android:textSize="14sp"/>

        <View
            android:layout_width="260px"
            android:layout_height="2px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/text_gray"/>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>